<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/recycler_card_view_margin"
    android:clipToPadding="false"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="@dimen/recycler_card_view_elevation"
    card_view:cardCornerRadius="@dimen/recycler_card_view_corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/rv_card_view_margin_top_bottom"
        android:layout_marginBottom="@dimen/rv_card_view_margin_top_bottom"
        android:layout_marginStart="@dimen/rv_card_view_margin_start_end"
        android:layout_marginEnd="@dimen/rv_card_view_margin_start_end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/rv_card_view_image_height"
            android:layout_height="@dimen/rv_card_view_image_width"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/rv_card_view_margin_start_end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/rv_card_view_margin_top_bottom"
                android:layout_marginTop="@dimen/rv_card_view_margin_top_bottom"
                android:textSize="@dimen/summary_title_text_size"
                android:maxLines = "3"
                android:ellipsize="end"
                android:minLines="1"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_ratings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_media_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:gravity="bottom"
                android:layout_marginBottom="@dimen/rv_card_view_margin_start_end"
                android:layout_marginEnd="@dimen/rv_card_view_margin_top_bottom"
                android:textStyle="italic"
                android:textColor="@color/txt_item_type_color"/>

        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>